    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_horizontal_assignment_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/small_title"
        android:textStyle="bold"
        android:text="Assignment Name"
        android:layout_marginStart="@dimen/common_small_margin"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_horizontal_assignment_tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/item_horizontal_assignment_tv_name"
        app:layout_constraintTop_toBottomOf="@id/item_horizontal_assignment_tv_name"
        style="@style/small_title"
        android:text="grade" />


