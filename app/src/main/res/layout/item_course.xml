<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/common_small_margin">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_course_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/title"
        android:text="Course A"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_course_tv_lecturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_course_tv_title"
        style="@style/title"
        android:text="Nudler"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_course_tv_semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_course_tv_lecturer"
        style="@style/title"
        android:text="Semster A"
        />



</androidx.constraintlayout.widget.ConstraintLayout>